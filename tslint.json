{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "eofline": true,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "no-shadowed-variable": false,
    "interface-name": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
